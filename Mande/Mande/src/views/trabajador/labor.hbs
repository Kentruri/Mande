<div class="container p-4">
    <h1 align="center"><b>Labor</b></h1>
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/trabajador/labor" method="POST">
                        <select class="form-control">
                            {{#each labores}}
                                <option>{{labor_nombre}}</option>
                            {{/each}}
                        </select>
                        <div class="form-group"><br>
                            <input type="text" class="form-control" name="precioxhora" autocomplete="off" required placeholder="Precio por hora">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Agregar
                            </button>
                            <small>
                                <a href="/trabajador/registro">Cancelar</a>
                            </small>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>