{{> navigationTrabajador}}
{{#if success}}
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="alert alert-success alert-dismissible fade show" role="=alert">
                    {{success}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>  
    </div>
    {{/if}}
<div class="container p-4">
    <div class="row">
        {{#each servicios}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title text-uppercase">
                        {{nombre_labor}}
                    </h3>
                    <p class="m-2"><b>Cliente: </b><br> {{usuario_nombre}}</p>
                    <p class="m-2"><b>Descripción: </b><br>{{servicio_descipcion}}</p>
                    <p class="m-2"><b>Fecha de inicio: </b>{{servicio_fecha}}</p>
                    <p class="m-2"><b>Fecha de culminación: </b>{{pago_fecha}}</p>
                    <p class="m-2"><b>Valor: </b>{{pago_valor}}</p>
                    <p class="m-2"><b><i>Pago realizado</i></b></p>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No tienes ninguna trabajo activo en este momento.</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>