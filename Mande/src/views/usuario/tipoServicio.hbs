<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header" style="text-align: center;">
                    <h3><b>Escoge el servicio</b></h3>
                </div>
                <div class="card-body">
                    <form action="/usuario/solicitar-servicio" method="POST">
                        <div class="form-group">
                            <select class="form-control" id="labor" onchange="ShowSelected();">
                                <option>Tipos de servicios</option>
                                {{#each labores}}
                                <option>{{labor_nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <textarea name="servicio_descipcion" class="form-control" rows="2"
                                placeholder="DescripciÃ³n"></textarea>
                        </div>
                        <input type="hidden" name="nombre_labor" id="n_labor">
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Continuar</button>
                            <small>
                                <a href="/usuario/perfil">Cancelar</a>
                            </small>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function ShowSelected() {
        /* Para obtener el texto */
        var combo = document.getElementById("labor");
        var selected = combo.options[combo.selectedIndex].text;
        document.getElementById('n_labor').value = selected;
    }
</script>