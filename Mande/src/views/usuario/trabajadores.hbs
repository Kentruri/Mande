<link rel="stylesheet" href="/css/detalles.css">
<link rel="stylesheet" href="/css/background.css">
<link rel="stylesheet" href="/css/Fondo.css">
{{> navigationUser}}
<div class="imagenActivos"></div>
<div class="container">
    <div class="row">
        {{#each trabajadores}}
        <div class="card">
            <img src={{trabajador_foto}} class="rounded mx-auto d-block ">
            <div>
                <b>ㅤ</b>
                <h4><b>{{trabajador_nombre}}</b></h4>
                <hr>
                </div>
            <p class="m-2">Distancia: <br> A
                {{Dist direccion_latitud direccion_longitud ../userUbication.direccion_latitud ../userUbication.direccion_longitud}}
                km's de ti<br> </p>
            <p class="m-2">Califiación: <br> {{promedio}} ✩</p>
            <p class="m-2">Precio por hora: <br> {{precioxhora}}</p>

            <a href="/usuario/contratar-trabajador/{{id_trabajador}}/{{nombre_labor}}/{{../servicio_descipcion}}">Contratar</a>
            <a href="/usuario/trabajador-perfil/{{id_trabajador}}/{{nombre_labor}}/{{../servicio_descipcion}}">Perfil</a>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card-message card-body text-center">
                <p>Por el momento no tenemos trabajadores que presenten ese servicio</p>
                <a href="/usuario/tipo-servicio">¡Selecciona otro!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>

{{!DESCRIPCIÓN DEL TRABAJO}}
<input type="hidden" value="{{servicio_descipcion}}" name="servicio_descipcion">

{{!COORDENADAS DEL USUARIO}}
<input type="hidden" value="{{userUbication.usuario_latitud}}" id="usuario_latitud" name="usuario_latitud">
<input type="hidden" value="{{userUbication.usuario_longitud}}" id="usuario_longitud" name="usuario_longitud">

<script type="text/javascript">

    var latU = parseFloat(document.getElementById('usuario_latitud').value);
    var lonU = parseFloat(document.getElementById('usuario_longitud').value);

</script>