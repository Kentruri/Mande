<div class="container p-4">
    <div class="row">
        {{#each servicios}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title text-uppercase">
                        {{nombre_labor}}
                    </h3>
                    <p class="m-2"><b>Trabajador:</b> <br>{{trabajador_nombre}}</p>
                    <p class="m-2"><b>Descripción:</b> <br>{{servicio_descipcion}}</p>
                    <p class="m-2"><b>Fecha:</b> {{servicio_fecha}}</p>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No tienes ninguna servicio en este momento.</p>
                <a href="/usuario/tipo-servicio">¡Solicita uno!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>