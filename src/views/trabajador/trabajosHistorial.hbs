<link rel="stylesheet" href="/css/mensaje.css">
<link rel="stylesheet" href="/css/Fondo.css">
{{> navigationTrabajador}}
<div class="imagenActivos">

</div>
{{#if success}}
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="alert alert-success alert-dismissible fade show" role="=alert">
                    {{success}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>  
    </div>
    {{/if}}
<div class="container p-4">
    <div class="row">
        {{#each servicios}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title text-uppercase">
                        {{nombre_labor}}
                    </h3>
                    <p class="m-2"><b>Cliente: </b><br> {{usuario_nombre}}</p>
                    <p class="m-2"><b>Descripción: </b><br>{{servicio_descipcion}}</p>
                    <p class="m-2"><b>Fecha de inicio: </b><br>{{NormalDate servicio_inicio}}</p>
                    <p class="m-2"><b>Fecha de culminación: </b>{{NormalDate servicio_final}}</p>
                    <p class="m-2"><b>Fecha de pago: </b><br>{{NormalDate pago_fecha}}</p>
                    <p class="m-2"><b>Valor: </b><br>{{pago_valor}}</p>
                    <p class="m-2"><b>Calificación: </b>{{servicio_calificacion}}☆</p>
                    <p class="m-2"><b><i>Pago realizado</i></b></p>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="tarjeta_mensaje card-body text-center">
                <p>Aún no has culminado ningún servico :(</p>
                <a href="#">Pero no te desanimes !</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>