

{{> navigationUser}}

<link rel="stylesheet" href="/css/detalles.css">
<link rel="stylesheet" href="/css/Fondo.css">

    <div class="imagenTipo"></div>
    {{#if success}}
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="alert alert-success alert-dismissible fade show" role="=alert">
                    {{success}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>  
    </div>
    {{/if}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="cardTipo bg-light mb-3">
                <div class="card-header" style="text-align: center;">
                    <h3><b>Escoge el servicio</b></h3>
                </div>
                <div class="card-body">
                    <form action="/usuario/tipo-servicio" method="POST">
                        <div class="form-group">
                            <select class="form-control" id="labor" onchange="ShowSelected();">
                                <option>Tipos de servicios</option>
                                {{#each labores}}
                                <option>{{labor_nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <textarea name="servicio_descipcion" class="form-control" rows="2" required
                                placeholder="Descripción"></textarea>
                        </div>
                        <input type="hidden" name="nombre_labor" id="n_labor">
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Continuar</button>
                            <br>
                                <a  href="/usuario/servicios-activos">‎Cancelar</a>
                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function ShowSelected() {
        /* Para obtener el texto */
        var combo = document.getElementById("labor");
        var selected = combo.options[combo.selectedIndex].text;
        document.getElementById('n_labor').value = selected;
    }
</script>